# runs nvim until exit code != 70

nvim_() {
  ec=70
  args="$@"
  while [ "$ec" -eq "70" ]; do
    /usr/bin/nvim $args &
    pid=$(ps --ppid $! --format 'pid=' | xargs)
    args_file="/tmp/nvim-restart-$pid"
    fg
    ec=$?
    echo "$args_file"
    if [ -e "$args_file" ]; then
      args=$(<"$args_file")
      rm -rf "$args_file"
    fi
  done
}

