# Unix
alias ll="ls -alh"
alias ln="ln -v"
alias mkdir="mkdir -p"
alias e="$EDITOR"
alias v="$VISUAL"
alias vi="nvim"

# Pacman
alias pacman-sizes='expac "%n %m" -l"\n" -Q $(pacman -Qq) | sort -rhk 2 | numfmt --to=iec-i --field=2 --format="%.3f" | less'

# Pretty print the path
alias path='echo $PATH | tr -s ":" "\n"'

# Configs
alias zshconfig="$EDITOR ~/.zshrc"
alias zshreload=". ~/.zshrc"
alias ohmyzsh="$EDITOR ~/.oh-my-zsh"

# Gradle
alias detekt="./gradlew detekt -i"
alias ktlint-format="./gradlew ktlintFormat"

# Include custom aliases
if [[ -f ~/.aliases.local ]]; then
  source ~/.aliases.local
fi
